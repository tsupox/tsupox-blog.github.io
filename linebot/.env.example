# LINE Bot Configuration
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_blog_repository_name

# Blog Configuration
BLOG_BASE_URL=https://your-blog-domain.com
BLOG_IMAGE_BASE_PATH=/images

# Session Storage Configuration
# For Vercel deployment (recommended)
KV_URL=your_vercel_kv_url_here
KV_REST_API_URL=your_vercel_kv_rest_api_url
KV_REST_API_TOKEN=your_vercel_kv_rest_api_token
KV_REST_API_READ_ONLY_TOKEN=your_vercel_kv_read_only_token

# For AWS Lambda deployment (alternative)
DYNAMODB_TABLE_NAME=linebot-sessions
AWS_REGION=us-east-1

# Image Storage Configuration
# For AWS Lambda deployment
S3_BUCKET_NAME=linebot-temp-images

# For Vercel deployment (Vercel Blob is automatically configured)
# No additional configuration needed for Vercel Blob

# Development
NODE_ENV=development